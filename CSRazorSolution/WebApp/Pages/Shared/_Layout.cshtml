<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/holiday.css@0.9.8" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @*Holiday .css.menu*@
                 <nav>
                    <ul>
                        <li>
                           <a  asp-area="" asp-page="/Index"><img src="~/img/WestWindLogo.png" alt="Logo image" title="Go to Home" width="80px" height="80px"/></a>
                       </li>
                        <li>
                            <a asp-area="" asp-page="/Index">Home</a>
                        </li>
                        @*Sub-Menu*@

                        <li>
                            <span>Samples</span>
                            <ul>
                            <li>
                               <a asp-area="" 
                                asp-page="/Samples/BasicDataManagement">Basics</a>
                             </li>
                             <li>
                               <a asp-area="" 
                               asp-page="/Samples/Controls">Controls</a>
                             </li>
                            </ul>
                         </li>
                        <li>
                            <a asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                   </ul>        
        </nav>
    </header>
    <div >
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer >
       
            &copy; 2022 - WebApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        
    </footer>

    
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>